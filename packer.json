{
  "variables": {
    "workspace": "{{env `WORKSPACE`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "ssh_username": "ec2-user",
      "ami_name": "jenkins-{{timestamp}}",
      "source_ami": "ami-07d9160fa81ccffb5",
      "instance_type": "t3.micro",
      "region": "eu-west-1",
      "vpc_filter": {
        "filters": {
          "tag:Name": "main"
        }
      },
      "subnet_filter": {
        "filters": {
          "tag:Name": "main*"
        },
        "random": true
      },
      "security_group_filter": {
        "filters": {
          "tag:Name": "packer-jenkins"
        }
      },
      "tags": {
        "Name": "jenkins-packer"
      },
      "run_tags": {
        "Name": "jenkins-packer"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo 'test'"
      ]
    }
  ]
}